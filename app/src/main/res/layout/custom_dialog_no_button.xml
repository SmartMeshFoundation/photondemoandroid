<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/color_ff1b272b"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/custom_dialog_title"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="24dp"
        android:ellipsize="marquee"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/custom_dialog_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_7f45ffbf"
            android:textSize="@dimen/dimens_14_sp" />

        <com.smartmesh.photon.custom.SuccessLoadingView
            android:id="@+id/custom_dialog_content_loading"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/custom_dialog_content_body_2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="18dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/custom_dialog_content_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_7f45ffbf"
            android:textSize="@dimen/dimens_14_sp" />

        <com.smartmesh.photon.custom.SuccessLoadingView
            android:id="@+id/custom_dialog_content_loading_2"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/custom_dialog_content_body_3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="18dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/custom_dialog_content_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_7f45ffbf"
            android:textSize="@dimen/dimens_14_sp" />

        <com.smartmesh.photon.custom.SuccessLoadingView
            android:id="@+id/custom_dialog_content_loading_3"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>


    <View
        android:layout_width="320dp"
        android:layout_height="20dp"/>

</LinearLayout>