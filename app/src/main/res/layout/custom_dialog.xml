<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/color_ff1b272b"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/custom_dialog_title"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="24dp"
        android:ellipsize="marquee"
        android:textSize="@dimen/dimens_18_sp" />

    <TextView
        android:id="@+id/custom_dialog_content"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="18dp"
        android:textColor="@color/color_7f45ffbf"
        android:textSize="@dimen/dimens_14_sp" />

    <TextView
        android:id="@+id/custom_dialog_content_2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:textColor="@color/color_7fe2edea"
        android:textSize="@dimen/dimens_14_sp" />

    <TextView
        android:id="@+id/custom_dialog_content_3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:textColor="@color/color_7fe2edea"
        android:textSize="@dimen/dimens_14_sp" />

    <include layout="@layout/dialog_include_layout"/>

</LinearLayout>