<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_like_rela"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="90dp" >

        <ImageView
            android:id="@+id/empty_like_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:clickable="false"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_empty_contract"/>

        <TextView
            android:id="@+id/empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_7fe2edea"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/photon_transfer_list_empty"
            android:textSize="@dimen/dimens_16_sp" />
        
    </LinearLayout>

</RelativeLayout>