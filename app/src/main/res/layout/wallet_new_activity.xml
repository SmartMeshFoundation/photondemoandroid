<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_wallet_empty"/>

    <TextView
        android:id="@+id/wallet_create"
        style="@style/WalletStyle"
        android:layout_height="40dp"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/dimens_16_sp"
        android:textColor="@color/color_45ffbf"
        android:background="@drawable/shape_stroke_45ffbf"
        android:text="@string/wallet_create" />

    <TextView
        android:id="@+id/wallet_import"
        style="@style/WalletStyle"
        android:layout_height="40dp"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/dimens_16_sp"
        android:textColor="@color/color_e2edea"
        android:background="@drawable/shape_stroke_e2edea"
        android:text="@string/wallet_import"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

</LinearLayout>

