<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ff1b272b"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/custom_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:text="@string/wallet_change"/>

        <TextView
            android:id="@+id/custom_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/cancel"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_45ffbf"/>

    </RelativeLayout>

    <com.smartmesh.photon.custom.CustomHeightListView
        android:id="@+id/custom_dialog_list_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:listSelector="@drawable/selector_item_1b272b_45ffbf"
        app:maxHeight= "300dp"
        android:scrollbars="none">
    </com.smartmesh.photon.custom.CustomHeightListView>
</LinearLayout>